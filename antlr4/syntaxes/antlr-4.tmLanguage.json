{
  "name": "antlr-4",
  "scopeName": "source.antlr-4",
  "fileTypes": [
    ".g4"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.antlr-4",
      "match": ""
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.antlr-4",
          "begin": "/\\*\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.antlr-4"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.antlr-4"
            }
          }
        },
        {
          "name": "comment.block.antlr-4",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.antlr-4"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.antlr-4"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.antlr-4"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.antlr-4"
        }
      ]
    }
  }
